{
  "name": "turdus-m3rula-gui",
  "version": "1.0.3",
  "description": "GUI for turdus merula - iOS/iPadOS downgrade tool for A9-A10X devices",
  "author": "AnInsomniacy <https://github.com/AnInsomniacy>",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "VITE_DEV_SERVER_URL=http://localhost:5173 concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "build": "vite build && electron-builder -m",
    "build:renderer": "vite build",
    "prestart": "npm run build:renderer",
    "start": "electron ."
  },
  "dependencies": {
    "ansi-to-html": "^0.7.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "vite": "^5.4.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.aninsomniacy.turdusm3rula",
    "productName": "Turdus M3rula GUI",
    "directories": { "buildResources": "resources" },
    "asar": true,
    "asarUnpack": [
      "bin/**"
    ],
    "files": [
      "dist/**",
      "electron/**",
      "bin/**",
      "index.html",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "bin",
        "to": "bin"
      }
    ],
    "icon": "resources/icon.png",
    "mac": {
      "icon": "resources/icon.png",
      "target": ["dmg"],
      "category": "public.app-category.utilities"
    },
    "linux": {
      "icon": "resources/icon.png",
      "target": ["AppImage", "deb"],
      "category": "Utility"
    }
  }
}
