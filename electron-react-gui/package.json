{
  "name": "turdus-m3rula-electron",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "VITE_DEV_SERVER_URL=http://localhost:5173 concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "build": "vite build && electron-builder -m",
    "build:renderer": "vite build",
    "prestart": "npm run build:renderer",
    "start": "electron ."
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "framer-motion": "^11.11.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "vite": "^5.4.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.example.turdusm3rula",
    "directories": { "buildResources": "resources" },
    "asar": true,
    "asarUnpack": [
      "bin/**"
    ],
    "files": [
      "dist/**",
      "electron/**",
      "bin/**",
      "index.html",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "bin",
        "to": "bin"
      }
    ],
    "icon": "../logo.png",
    "mac": {
      "icon": "../logo.png",
      "target": ["dmg"]
    },
    "linux": {
      "icon": "../logo.png",
      "target": ["AppImage", "deb"]
    }
  }
}
